<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:weightSum="100">

    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@color/fond_bleu"
        android:layout_weight="50"
        android:paddingBottom="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/accueil_part1"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/accueil_part2"
            android:textColor="@color/black"
            android:layout_marginBottom="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/accueil_part3"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/accueil_part4"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btn_don"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/faire_un_don"
            android:layout_gravity="center"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:layout_marginTop="55dp"
            android:textColor="@color/black"
            android:background="@drawable/btn_faire_don" />

        <Button
            android:id="@+id/btnSpeech"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lecture"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_gravity="center"
            android:background="@drawable/btn_tts"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/text_don"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:paddingHorizontal="20dp"
        android:layout_weight="50">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/accueil_part5"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:textColor="@color/black"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/accueil_part6"
            android:textColor="@color/black"/>

        <Button
            android:id="@+id/btn_assos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/accueil_part7"
            android:textColor="@color/black"
            android:layout_gravity="center"
            android:layout_marginTop="55dp"
            android:layout_marginBottom="10dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:background="@drawable/btn_decouvrir_assos"/>
        <Button
            android:id="@+id/btnSpeech2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lecture"
            android:layout_gravity="center"
            android:visibility="gone"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginBottom="30dp"
            android:background="@drawable/btn_tts"/>
    </LinearLayout>
</LinearLayout>
</ScrollView>