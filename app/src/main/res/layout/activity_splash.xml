<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:id="@+id/coinSupG">
            <View
                android:layout_width="65dp"
                android:layout_height="11dp"
                android:background="@drawable/ligne_turquoise"
                android:layout_marginTop="20dp"
                android:layout_marginStart="-30dp"
                android:rotation="-30" />
            <View
                android:layout_width="60dp"
                android:layout_height="11dp"
                android:background="@drawable/ligne_bleu"
                android:layout_marginTop="-15dp"
                android:layout_marginStart="30dp"
                android:rotation="-30" />
            <View
                android:layout_width="60dp"
                android:layout_height="11dp"
                android:background="@drawable/ligne_bleu"
                android:layout_marginTop="40dp"
                android:layout_marginStart="-20dp"
                android:rotation="-30" />
            <View
                android:layout_width="30dp"
                android:layout_height="11dp"
                android:background="@drawable/ligne_orange"
                android:layout_marginTop="15dp"
                android:layout_marginStart="40dp"
                android:rotation="-30" />
            <View
                android:layout_width="100dp"
                android:layout_height="11dp"
                android:background="@drawable/ligne_orange"
                android:layout_marginTop="60dp"
                android:layout_marginStart="-30dp"
                android:rotation="-30" />
            <View
                android:layout_width="60dp"
                android:layout_height="11dp"
                android:background="@drawable/ligne_turquoise"
                android:layout_marginTop="14dp"
                android:layout_marginStart="70dp"
                android:rotation="-30" />
        </RelativeLayout>
        <View
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/rect_bleu"
            android:layout_gravity="end"
            android:layout_marginEnd="-4dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/coinSupG">
        </View>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:src="@drawable/logo"
            android:layout_gravity="center"
            android:id="@+id/logo">
        </ImageView>


    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="40">

        <View
            android:id="@+id/rect_orange"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/rect_orange"
            android:layout_marginStart="-25dp">
        </View>
        <View
            android:id="@+id/rect_turquoise"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:background="@drawable/rect_turquoise"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="60dp">
        </View>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rotation="180"
            android:layout_below="@+id/rect_turquoise"
            android:layout_alignParentBottom="true">

            <View
                android:layout_width="65dp"
                android:layout_height="11dp"
                android:layout_marginStart="-30dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/ligne_turquoise"
                android:rotation="-30" />

            <View
                android:layout_width="60dp"
                android:layout_height="11dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="-15dp"
                android:background="@drawable/ligne_bleu"
                android:rotation="-30" />

            <View
                android:layout_width="60dp"
                android:layout_height="11dp"
                android:layout_marginStart="-20dp"
                android:layout_marginTop="40dp"
                android:background="@drawable/ligne_bleu"
                android:rotation="-30" />

            <View
                android:layout_width="30dp"
                android:layout_height="11dp"
                android:layout_marginStart="40dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/ligne_orange"
                android:rotation="-30" />

            <View
                android:layout_width="100dp"
                android:layout_height="11dp"
                android:layout_marginStart="-30dp"
                android:layout_marginTop="60dp"
                android:background="@drawable/ligne_orange"
                android:rotation="-30" />

            <View
                android:layout_width="60dp"
                android:layout_height="11dp"
                android:layout_marginStart="70dp"
                android:layout_marginTop="14dp"
                android:background="@drawable/ligne_turquoise"
                android:rotation="-30" />
        </RelativeLayout>

    </RelativeLayout>

</LinearLayout>