<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="20dp">

    <!-- bloc choix assos -->
    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:background="@drawable/fond_rose_arrondi"
        android:gravity="center"
        android:layout_marginBottom="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choisir_un_montant"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginBottom="15dp"/>

        <!-- Pour rentrer le montant -->
        <EditText
            android:id="@+id/montant_rentrer"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:inputType="number"
            android:background="@drawable/spinner_style"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">
            <Button
                android:id="@+id/btn_moins"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:text="-"
                android:background="@drawable/btn_moins"
                android:layout_marginEnd="50dp"/>
            <Button
                android:id="@+id/btn_plus"
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:text="+"
                android:background="@drawable/btn_plus"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <Button
            android:id="@+id/suivant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/suivant"
            android:textColor="@color/black"
            android:background="@drawable/btn_suivant"
            android:layout_marginTop="10dp"/>
        <Button
            android:id="@+id/retour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/retour"
            android:textColor="@color/black"
            android:background="@drawable/btn_retour"
            android:layout_marginTop="15dp"/>
    </LinearLayout>
</LinearLayout>
