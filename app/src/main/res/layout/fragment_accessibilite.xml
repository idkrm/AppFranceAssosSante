<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp"
    tools:context=".fragments.AccessibiliteFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/fond_bleu_arrondi"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="@string/lecture"/>

            <CheckBox
                android:id="@+id/checkbox_lecture"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="20dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/taille"
                android:layout_marginBottom="20dp"
                android:layout_weight="1"/>

            <Spinner
                android:id="@+id/spinner_taille"
                android:gravity="end"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:background="@drawable/edit_text"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="10dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/daltonisme"/>

                <CheckBox
                    android:id="@+id/checkbox_daltonisme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <RadioGroup
                android:id="@+id/group_daltonisme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/radio_protanopie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/protanopie"/>

                <RadioButton
                    android:id="@+id/radio_deuteranopie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/deuteranopie"/>

                <RadioButton
                    android:id="@+id/radio_tritanopie"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tritanopie"/>
            </RadioGroup>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>